	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field name="category_ordering" type="list" default="1" label="MOD_PHOCACART_CATEGORY_FIELD_CATEGORY_ORDERING_LABEL" description="MOD_PHOCACART_CATEGORY_FIELD_CATEGORY_ORDERING_DESC">
